<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
    <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/canteen?zeroDateTimeBehavior=convertToNull</property>
    <property name="hibernate.connection.username">fotcan_admin</property>
    <property name="hibernate.connection.password">sahan</property>
    <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
    <property name="hibernate.show_sql">true</property>
    <property name="hibernate.query.factory_class">org.hibernate.hql.internal.ast.ASTQueryTranslatorFactory</property>
    <mapping resource="pojo/Deliverwork.hbm.xml"/>
    <mapping resource="pojo/Notify.hbm.xml"/>
    <mapping resource="pojo/Neworder.hbm.xml"/>
    <mapping resource="pojo/Feedback.hbm.xml"/>
